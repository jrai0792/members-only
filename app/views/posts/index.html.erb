<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <% if user_signed_in?  %>    
          <th>User</th>
        <%end%>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <% if user_signed_in?  %>    
          <td><%= post.user.name %></td>
        <%end%>
        
      </tr>
    <% end %>
    <% if user_signed_in?  %>    
          <%= link_to "Create a New Post", new_post_path %>
    <%end%>
  </tbody>
</table>

<br>

